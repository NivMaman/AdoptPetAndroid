<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:id="@+id/pet_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pet_image"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/pet_name"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/small_dimen"
                android:text="defualt"
                android:textSize="17sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/pet_picture" />

            <TextView
                android:id="@+id/pet_age"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/small_dimen"
                android:text="ppkkp"
                android:textSize="17sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/pet_name" />

            <TextView
                android:id="@+id/pet_dog_or_cat"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/small_dimen"
                android:text="defualt"
                card_view:layout_constraintEnd_toStartOf="@+id/pet_name"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/pet_picture" />

            <TextView
                android:id="@+id/pet_kind"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/small_dimen"
                android:text="defualt"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/pet_age"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/pet_dog_or_cat" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
